{
  "name": "todo-app",
  "scripts": {
    "build": "snowpack build",
    "ci": "npm run lint && npm test",
    "format": "prettier --write .",
    "lint": "run-p --aggregate-output lint:**",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:js": "eslint .",
    "lint:prettier": "prettier --check .",
    "start": "snowpack dev",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{js,jsx,css,json,md,html,yml,yaml}": "prettier --write",
    "*.{js,jsx,json}": "eslint --ext .js,.jsx --fix"
  },
  "dependencies": {
    "ace-builds": "^1.4.12",
    "actus": "^0.11.0-alpha.0",
    "key-event-to-string": "^1.2.0",
    "mergerino": "^0.4.0",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-ace": "^9.4.1",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.2",
    "rehype-raw": "^5.1.0",
    "rehype-sanitize": "^4.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^2.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@twinscom/stylelint-config": "^5.4.0",
    "eslint": "^7.30.0",
    "eslint-config-hardcore": "^19.15.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-perf": "^3.3.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "rollup-plugin-polyfill-node": "^0.6.2",
    "snowpack": "^3.8.2",
    "stylelint": "^13.13.1"
  }
}
