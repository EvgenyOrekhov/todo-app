{
  "scripts": {
    "build": "snowpack build",
    "ci": "npm run lint && npm test",
    "format": "prettier --write .",
    "lint": "run-p --aggregate-output lint:**",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:prettier": "prettier --check .",
    "start": "snowpack dev",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{js,jsx,css,json,md,html,yml,yaml}": "prettier --write",
    "*.{js,jsx,json}": "eslint --ext .js,.jsx --fix"
  },
  "dependencies": {
    "ace-builds": "^1.4.12",
    "actus": "^0.3.0-alpha.0",
    "actus-default-actions": "0.1.0-alpha.2",
    "actus-logger": "^0.2.0-alpha.0",
    "key-event-to-string": "^1.2.0",
    "mergerino": "^0.4.0",
    "ramda": "^0.27.0",
    "react": "^16.13.0",
    "react-ace": "^9.1.1",
    "react-dom": "^16.13.0",
    "react-markdown": "^4.3.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.6.0-alpha.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@twinscom/stylelint-config": "^5.0.0",
    "eslint": "^7.5.0",
    "eslint-config-hardcore": "^12.6.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-packagejson": "^2.2.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "snowpack": "^2.6.4",
    "stylelint": "^13.6.1"
  }
}
