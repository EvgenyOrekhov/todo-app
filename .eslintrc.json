{
  "extends": [
    "hardcore",
    "hardcore/fp",
    "plugin:jest/all",
    "plugin:jest-formatting/strict",
    "plugin:react/all",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier/react"
  ],

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "browser": true
  },

  "globals": {
    "blur": "off",
    "defaultstatus": "off",
    "defaultStatus": "off",
    "event": "off",
    "name": "off",
    "status": "off",
    "find": "off"
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/**",
          "tests/**",
          "**/*.test.js",
          "**/*.spec.js",
          "jest.config.js",
          "jest.setup.js",
          "snowpack.config.js"
        ],
        "optionalDependencies": false,
        "peerDependencies": false,
        "bundledDependencies": false
      }
    ],

    "no-alert": "off",

    "optimize-regex/optimize-regex": "off",
    "security/detect-unsafe-regex": "off",
    "jest/require-top-level-describe": "off",

    "react/prop-types": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-no-literals": "off",
    "react/forbid-component-props": "off",

    "jsx-a11y/no-autofocus": "off"
  },

  "overrides": [
    {
      "files": ["*.jsx"]
    },

    {
      "files": ["*.test.*"],

      "env": {
        "jest": true
      }
    },

    {
      "files": ["jest.config.js", "snowpack.config.js"],

      "parserOptions": {
        "sourceType": "script"
      },

      "env": {
        "node": true
      }
    }
  ]
}
